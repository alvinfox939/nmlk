@keyframes y-popup-fade-out-down {
    0% {
        visibility: visible;
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        visibility: hidden;
        transform: translateY(10px);
        opacity: 0;
    }
}

@keyframes y-popup-fade-in-up {
    0% {
        opacity: 0;
        transform: translateY(10px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

